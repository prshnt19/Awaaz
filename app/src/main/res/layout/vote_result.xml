<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.pr.f2w.VoteResult"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7af7f3f3">

        <ImageView
            android:id="@+id/first_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/first_img"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/first_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/first_img"
            android:textAlignment="center"
            android:layout_below="@id/first_name"
            android:textAppearance="?android:textAppearanceLarge"/>

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7af7f3f3">

        <ImageView
            android:id="@+id/second_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/second_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/second_img"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/second_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/second_img"
            android:textAlignment="center"
            android:layout_below="@id/second_name"
            android:textAppearance="?android:textAppearanceLarge"/>

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7af7f3f3">

        <ImageView
            android:id="@+id/third_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/third_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/third_img"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView
            android:id="@+id/third_vote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/third_img"
            android:textAlignment="center"
            android:layout_below="@id/third_name"
            android:textAppearance="?android:textAppearanceLarge"/>

    </RelativeLayout>

</LinearLayout>
